{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "dependencies"
  ],
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "before 5pm on Wednesday"
  ],
  "commitMessagePrefix": "fix:",
  "customManagers": [
    {
      "managerFilePatterns": [
        "/Dockerfile/"
      ],
      "description": "Update alpine packages",
      "matchStrings": [
        "# renovate: datasource=repology depName=alpine_(?<currentValue>\\d+[._]\\d+)"
      ],
      "currentValueTemplate": "{{{ replace '_' '.' currentValue }}}",
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker.io/library/alpine",
      "versioningTemplate": "regex:^(?<major>\\d+)[._](?<minor>\\d+)$",
      "autoReplaceStringTemplate": "# renovate: datasource=repology depName=alpine_{{{newMajor}}}_{{{newMinor}}}",
      "customType": "regex"
    },
    {
      "customType": "regex",
      "description": "Update _VERSION variables in Dockerfiles",
      "managerFilePatterns": [
        "/(^|/|\\.)Dockerfile$/",
        "/(^|/)Dockerfile\\.[^/]*$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)(?: lookupName=(?<packageName>.+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s(?:ENV|ARG) .+?_VERSION=(?<currentValue>.+?)?(?:@(?<currentDigest>sha256:[a-f0-9]+))?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "openshift/oc"
      ],
      "extractVersion": "^openshift-clients-(?<version>[\\d.]+)-.*$!"
    }
  ]
}
